<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

  <display-name>Welcome to Tomcat</display-name>
  <description>
     Welcome to Tomcat
  </description>

  <servlet>
	<servlet-name>app1</servlet-name>
	<servlet-class>controllers.SaveServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app1</servlet-name>
	<url-pattern>/save.do</url-pattern>
  </servlet-mapping>


  <servlet>
	<servlet-name>app2</servlet-name>
	<servlet-class>controllers.ShowProfileServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app2</servlet-name>
	<url-pattern>/profile.do</url-pattern>
  </servlet-mapping>


  <servlet>
	<servlet-name>app3</servlet-name>
	<servlet-class>controllers.UpdateProfileServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app3</servlet-name>
	<url-pattern>/update.do</url-pattern>
  </servlet-mapping>

</web-app>
