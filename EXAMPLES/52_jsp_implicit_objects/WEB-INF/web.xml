<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

  <display-name>Welcome to Tomcat</display-name>
  <description>
     Welcome to Tomcat
  </description>

  <context-param>
	<param-name>abc</param-name>
	<param-value>sarvesh</param-value>
  </context-param>

  <servlet>
	<servlet-name>app001</servlet-name>
	<servlet-class>controllers.ActionServlet</servlet-class>
	<init-param>
		<param-name>abc</param-name>
		<param-value>mohan</param-value>
	</init-param>
  </servlet>

  <servlet-mapping>
	<servlet-name>app001</servlet-name>
	<url-pattern>/act.do</url-pattern>
  </servlet-mapping>


  <servlet>
	<servlet-name>app002</servlet-name>
	<jsp-file>/abc.jsp</jsp-file>
	<init-param>
		<param-name>abc</param-name>
		<param-value>ganesh</param-value>
	</init-param>
  </servlet>

  <servlet-mapping>
	<servlet-name>app002</servlet-name>
	<url-pattern>/abc.jsp</url-pattern>
  </servlet-mapping>



</web-app>
